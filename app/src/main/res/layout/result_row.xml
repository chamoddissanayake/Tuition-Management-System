<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resultDownloadImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/down"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/student_id_result1"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/subject_name_result_row"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/exam_id_result_row"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mark_result_row"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/document_result_row"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dash1_result_row"
                />
        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dash_result_row"
            />
        <TextView
            android:id="@+id/tvExamID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dash2_result_row"
            />
        <TextView
            android:id="@+id/tvMark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dash3_result_row"
            />
        <TextView
            android:id="@+id/tvDocument"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dash4_result_row"
            />

    </LinearLayout>

</LinearLayout>